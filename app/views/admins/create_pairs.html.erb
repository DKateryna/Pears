<div class="panel panel-default">

  <div class="panel-body">
    <div class="panel panel-default" >
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-7">
            <h2>Generate pairs</h2>
          </div>
          <div class="col-md-5">
            <%= datetime_local_field :day, class: "form-control pull-right pull-down" %>
            <%= link_to 'Save', pairs_path( @pairs ), method: :post , class: 'btn btn-default pull-right pull-down mleft' %>
            <%= link_to 'Generate pairs', pairs_path , method: :get, class: 'btn btn-default pull-right pull-down' %>
          </div>
        </div>
      </div>
        <% @pairs.each do |pair| %>
          <div class="panel-heading">
              <%=" #{pair[0].first_name}  #{pair[0].last_name}" %>
              +
              <%=" #{pair[1].first_name}  #{pair[1].last_name}" %>

              <% if pair[2] %>
              +
                <%=" #{pair[2].first_name}  #{pair[2].last_name}" %>
              <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
